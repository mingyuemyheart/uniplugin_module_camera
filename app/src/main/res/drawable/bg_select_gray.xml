<?xml version="1.0" encoding="utf-8"?>
<!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="@color/translucent" />

            <corners
                android:radius="2dp"/>

            <size
                android:height="20dp"
                android:width="20dp" />

            <stroke
                android:color="@color/white"
                android:width="1dp"/>

        </shape>
    </item>

</layer-list>