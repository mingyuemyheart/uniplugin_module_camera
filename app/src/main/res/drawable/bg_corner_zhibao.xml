<?xml version="1.0" encoding="utf-8"?>
<!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="@color/transparent" />

            <corners
                android:radius="2dp" />
            
            <size 
                android:width="40dp"
                android:height="30dp"/>
            
            <stroke 
                android:width="1.5dp"
                android:color="#e04452"/>
            
        </shape>
    </item>

</layer-list>